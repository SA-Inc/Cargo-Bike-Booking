datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Order {
  id Int @id @default(autoincrement())
  from String
  to String
  start_time DateTime
  status String @default("created")
  end_time DateTime @default(now())
  expected_duration Int
  actual_duration Int?
  description String

  first_name String
  last_name String
  department String
  role String
  // user User @relation(fields: [user_id], references: [id])
  // user_id Int
}

