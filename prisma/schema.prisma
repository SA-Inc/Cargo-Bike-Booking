model Asset {
  id         Int          @id @default(autoincrement())
  name       String
  category   String
  created    DateTime     @default(now())
  OrderAsset OrderAsset[]
}

model OrderAsset {
  id       Int @id @default(autoincrement())
  order_id Int
  asset_id Int
  count    Int

  asset Asset @relation(fields: [asset_id], references: [id])
  order Order @relation(fields: [order_id], references: [id])
}